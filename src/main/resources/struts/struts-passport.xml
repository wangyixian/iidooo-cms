<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="passport" extends="basic">
	
		<action name="login" class="com.iidooo.passport.action.LoginAction" method="login">
			<result name="success" type="redirect">index.action</result>
			<result name="input">/WEB-INF/jsp/Login.jsp</result>			
		</action>
		
		<action name="logout" class="com.iidooo.passport.action.LoginAction" method="logout">
			<result name="success">/WEB-INF/jsp/Login.jsp</result>
		</action>

		<action name="index" class="com.iidooo.passport.action.IndexAction" method="init">
			<result name="success">/WEB-INF/jsp/Index.jsp</result>
		</action>

		<action name="userinfo" class="com.iidooo.passport.action.UserinfoAction" method="init">
			<result name="success">/WEB-INF/jsp/Userinfo.jsp</result>
		</action>
		<action name="saveUserinfo" class="com.iidooo.passport.action.UserinfoAction" method="save">
			<result name="success">/WEB-INF/jsp/Userinfo.jsp</result>
			<result name="input">/WEB-INF/jsp/Userinfo.jsp</result>
		</action>

		<action name="password" class="com.iidooo.passport.action.PasswordAction" method="init">
			<result name="success">/WEB-INF/jsp/Password.jsp</result>
		</action>
		<action name="savePassword" class="com.iidooo.passport.action.PasswordAction" method="save">
			<result name="success">/WEB-INF/jsp/Password.jsp</result>
			<result name="input">/WEB-INF/jsp/Password.jsp</result>
		</action>
		<action name="userManage" class="com.iidooo.passport.action.user.UserListAction" method="init">
			<result name="success">/WEB-INF/jsp/user/UserList.jsp</result>
		</action>
		<action name="userList" class="com.iidooo.passport.action.user.UserListAction" method="init">
			<result name="success">/WEB-INF/jsp/user/UserList.jsp</result>
		</action>
		<action name="userListDelete" class="com.iidooo.passport.action.user.UserListAction" method="delete">
			<result name="success" type="redirectAction">userList.action?user.userID=${user.userID}</result>
			<result name="input">/WEB-INF/jsp/user/UserList.jsp</result>
		</action>

		<action name="userDetail" class="com.iidooo.passport.action.user.UserDetailAction" method="init">
			<result name="success">/WEB-INF/jsp/user/UserDetail.jsp</result>
			<result name="input">/WEB-INF/jsp/user/UserDetail.jsp</result>
		</action>
		<action name="userCreate" class="com.iidooo.passport.action.user.UserDetailAction" method="create">
			<result name="success">/WEB-INF/jsp/user/UserDetail.jsp</result>
			<result name="input">/WEB-INF/jsp/user/UserDetail.jsp</result>
		</action>
		<action name="userUpdate" class="com.iidooo.passport.action.user.UserDetailAction" method="update">
			<result name="success">/WEB-INF/jsp/user/UserDetail.jsp</result>
			<result name="input">/WEB-INF/jsp/user/UserDetail.jsp</result>
		</action>
	</package>
</struts>